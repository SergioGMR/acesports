</button>

<script>
    const themeToggle = document.getElementById("themeToggle");
    const html = document.documentElement;

    // FunciÃ³n para obtener el tema preferido por el usuario
    function getPreferredTheme() {
        const theme = localStorage.getItem("theme");
        if (theme) {
            return theme;
        }
        return window.matchMedia("(prefers-color-scheme: dark)").matches
            ? "dark"
            : "light";
    }

    // FunciÃ³n para establecer el tema
    function setTheme(theme: string) {
        if (theme === "dark") {
            html.classList.add("dark");
        } else {
            html.classList.remove("dark");
        }
        localStorage.setItem("theme", theme);
        updateToggleButton(theme);
    }

    // Actualiza el botÃ³n de toggle con el icono correspondiente
    function updateToggleButton(theme: string) {
        const moonIcon = "ğŸŒ™";
        const sunIcon = "â˜€ï¸";
        const systemIcon = "âš™ï¸";
        if (!themeToggle) return;
        if (theme === "dark") {
            themeToggle.innerHTML = sunIcon;
        } else if (theme === "light") {
            themeToggle.innerHTML = moonIcon;
        } else {
            themeToggle.innerHTML = systemIcon;
        }
    }

    // Inicializar el tema cuando la pÃ¡gina carga
    setTheme(getPreferredTheme());

    // Agregar el event listener al botÃ³n de toggle para cambiar el tema
    themeToggle?.addEventListener("click", () => {
        const currentTheme = localStorage.getItem("theme") || "system";
        if (currentTheme === "dark") {
            setTheme("light");
        } else if (currentTheme === "light") {
            setTheme("system");
        } else {
            setTheme("dark");
        }
    });

    // Escuchar cambios en el sistema (tema oscuro o claro del sistema)
    window
        .matchMedia("(prefers-color-scheme: dark)")
        .addEventListener("change", () => {
            if (localStorage.getItem("theme") === "system") {
                setTheme(getPreferredTheme());
            }
        });
</script>
