/**
 * ViewControls.astro - Componente para controlar la vista de eventos (grid/list)
 */
---

<div class="flex items-center gap-x-4">
    <!-- Vista por filas/columnas -->
    <div
        class="bg-gray-100 dark:bg-gray-800 rounded-lg p-1 flex items-center shadow-sm"
    >
        <button
            id="gridViewBtn"
            class="p-2 rounded-md bg-white shadow-sm"
            title="Vista en cuadrÃ­cula"
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-4 w-4 text-gray-700"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
